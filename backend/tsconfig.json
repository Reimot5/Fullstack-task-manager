{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots" : ["./src/types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
